{% set fontStyle = 'color:#0d0d0d;font-family:-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Cantarell, "Helvetica Neue", sans-serif; '%}
{% set styleParagraph = 'font-size:15px;line-height:24px;margin:0 0 16px;' %}
<table style="max-width:1000px;">
  <tr><td>
    <table style="width:100%; background-color:#37474f; padding:10px 0; margin:25px 0; height:64px;">
      <tr>
        <td style="padding:0 0 0 15px;"><img src="{{ piwikUrl }}/plugins/Morpheus/images/logo-email.png" height="20px" width="auto" alt="Piwik, {{ 'General_OpenSourceWebAnalytics'|translate }}" /></td>
        <td align="right" ><a style="font-size:16px; padding:0 15px; color:#ffffff" title="{{'Dashboard_TopLinkToolTip'|translate(websiteName)}}" href="{{ piwikUrl }}{{ linkTo({'module': 'CoreHome', 'action': 'index', 'idSite': idSite, 'period': period, 'date': date})|raw }}">Dashboard</a></td>
      </tr>
    </table>

    <h2 style='{{fontStyle}} color:#37474f; line-height:30px; margin:25px 0 15px 0;'>{{ 'ScheduledReports_EmailHello'|translate }}</h2>
    <p style='{{styleParagraph}}{{fontStyle}}'>{{ 'CustomAlerts_MailText'|translate( websiteName,prettyDate )}} {{ 'CustomAlerts_MailEnd'|translate }}</p>

    {{ triggeredAlerts|raw }}

    <hr style=" border: 0; margin: 45px 0 30px 0;  height: 1px; background-image: linear-gradient(to right, rgba(231, 231, 231, 0), rgba(231, 231, 231, 1), rgba(2311, 2311, 231, 0));">
    <p style='{{styleParagraph}}{{fontStyle}}text-align:center;font-size:13px; color:#666;'>{{'General_PoweredBy'|translate}} <a style="color:#439fe0; " href="https://piwik.org/" title="Piwik Analytics">Piwik Analytics</a>
      <br />
      The leading open analytics platform that respects your privacy.</p>
  </td></tr>
</table>
